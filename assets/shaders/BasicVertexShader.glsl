#version 120
//--------------------------------------------------------------------------------------
// Constant Buffer Variables
//--------------------------------------------------------------------------------------
uniform mat4 mViewProj;
uniform mat4 mWorld;

//--------------------------------------------------------------------------------------
attribute vec4 vPosition;
attribute vec3 vNormal;

varying vec4 Pos;
varying vec4 Normal;

//--------------------------------------------------------------------------------------
// Vertex Shader
//--------------------------------------------------------------------------------------
void main( void )
{
    Pos       = vPosition * mWorld;
    Normal    = vec4( vNormal, 1 ) * mWorld;

    gl_Position = Pos * mViewProj; //ScreenPos;
}
